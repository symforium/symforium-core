{% extends "SymforiumUserBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .user-container {
            width: 600px;
        }
    </style>
{% endblock %}

{% block fos_user_content %}
    <div class="form-box">
        <div class="row"><h3 class="text-primary">{{ 'security.register.title'|trans({}, 'FOSUserBundle') }}</h3></div>

        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
              class="fos_user_registration_register">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="username"
                               class="control-label">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label>
                        {{ form_widget(form.username, {'attr': {'class': 'form-control' }}) }}
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="email" class="control-label">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control' }}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="password"
                               class="control-label">{{ 'form.password'|trans({}, 'FOSUserBundle') }}</label>
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' }}) }}
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="password"
                               class="control-label">{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' }}) }}
                    </div>
                </div>
            </div>

            <div class="row">&nbsp;</div>

            <div class="row">
                <div class="col-xs-1"></div>
                <div class="col-xs-10">
                    <input type="submit" class="btn btn-lg btn-block btn-primary"
                           value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}"/>
                </div>
                <div class="col-xs-1"></div>
            </div>
        </form>
    </div>
{% endblock fos_user_content %}
