{% trans_default_domain "symforium" %}
{% set containerClass = 'container' %}
{% set bodyType = 'main' %}
{% extends 'SymforiumCoreBundle:Layout:layout.html.twig' %}

{% block menu %}
    {{ knp_menu_render('main', {'currentClass': 'active'}) }}
    <ul class="nav navbar-nav navbar-right">
        {% if is_granted('ROLE_USER') %}
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ url('symforium_core_admin_index') }}">Admin Panel</a></li>
            {% else %}
            {% endif %}
        {% else %}
            <li><a href="{{ url('fos_user_registration_register') }}">Register</a></li>
            <li><a href="{{ url('fos_user_security_login') }}">Sign In</a></li>
        {% endif %}
    </ul>
{% endblock %}

{% block wrapper %}
    <div id="content">{% block content %}{% endblock %}</div>
{% endblock %}