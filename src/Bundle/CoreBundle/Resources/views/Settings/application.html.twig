{% extends 'SymforiumCoreBundle:Layout:admin.html.twig' %}

{% block content %}
    <div class="settings">
        <div class="page-header">
            <h3>Settings <small>Application</small></h3>
        </div>
        <div class="container-fluid">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.site_name) }}
                            {{ form_widget(form.site_name) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        {{ form_description(form.site_name) }}
                    </div>
                </div>
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg btn-block fixed-bottom'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}