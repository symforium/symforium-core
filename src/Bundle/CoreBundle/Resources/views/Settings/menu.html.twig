{% extends 'SymforiumCoreBundle:Layout:admin.html.twig' %}

{% block content %}
    <div class="settings">
        <div class="page-header">
            <h3>Settings <small>Menu</small></h3>
        </div>
        <div class="container-fluid">
            <a href="{{ path('symforium_core_menu_add') }}" class="pull-right btn btn-primary">Add New Menu Item</a>
            <div class="row spacer">&nbsp;</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Display</th>
                        <th>Url</th>
                        <th>Title</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in menu_items %}
                        <tr>
                            <td>{{ item.display }}</td>
                            <td>{{ item.url }}</td>
                            <td>{{ item.title }}</td>
                            <td>{{ item.insertDate.format('M jS, Y \\a\\t g:ia') }}</td>
                            <td>{{ item.modifiedDate.format('M jS, Y \\a\\t g:ia') }}</td>
                            <td>
                                <div class="options">
                                    <a href="{{ path('symforium_core_menu_edit', {'menuItem': item.id}) }}"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('symforium_core_menu_delete', {'menuItem': item.id}) }}"><i class="fa fa-times"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}